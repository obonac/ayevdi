# TBD: Remove the bsf keyword - or should we let it be there?
if [ "$1" == "bsf" ]
then
  shift 2
else
  shift 1
fi

timestamp=$(date +%s)
timedelta=$(date +"%z")
logip=$(last -a | head -1 | rev | cut -d' ' -f1 | rev)
logtty=$(last | head -1 | cut -d' ' -f2)
echo AYEVDI:LOG:${timestamp}:${timedelta}:${logip}:${logtty}:$@ >> ${HOME}/.ayevdi/ayevdi-log
